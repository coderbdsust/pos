<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="POSPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.coderbd.pos.er.Expenditures</class>
    <class>com.coderbd.pos.er.CustomerOrders</class>
    <class>com.coderbd.pos.er.OrderProducts</class>
    <class>com.coderbd.pos.er.ShopOwners</class>
    <class>com.coderbd.pos.er.Shops</class>
    <class>com.coderbd.pos.er.ExpenseCategories</class>
    <class>com.coderbd.pos.er.ShopExpenditures</class>
    <class>com.coderbd.pos.er.Products</class>
    <class>com.coderbd.pos.er.Users</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/pos?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="coderbd"/>
    </properties>
  </persistence-unit>
</persistence>
